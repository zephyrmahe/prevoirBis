{% extends "layout.html.twig" %}

{% block head %}
<h1>Modifier le mot de passe</h1>
{% endblock %} 

{% block content %}
  <div class="container-fluid index">
    <div class="row">
      <div class="col-lg-4 col-md-2 col-0">
      </div>
      <div class="col-lg-4 col-md-8 col-12">
       <form method="post">
          <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="ancien mot de passe">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="newPW" placeholder="nouveau mot de passe">
          </div>          
          <div class="form-group">
            <input type="password" class="form-control" name="ConfNewPW" placeholder="confirmer nouveau mot de passe">
          </div>
          <button class="btn btn-dark valid" type="submit" name="button">
              <i class="fa fa-paper-plane-o" aria-hidden="true"></i> Valider
          </button>
        </form>
      </div>
      <div class="col-lg-4 col-md-2 col-0"></div>
    </div>
  </div>
  {% endblock %}