{% extends "layout.html.twig" %}
{% block head %}
<h1>Bienvenue à Prévoir Bis</h1>
{% endblock %} 

{% block content %}
  <div class="container-fluid index">
    <div class="row">
      <div id="erreur" class="col-lg-4 col-md-2 col-sm-0">
      </div>
      <div class="col-lg-4 col-md-8 col-sm-12">
       <form method="post">
          <div class="form-group">
            <input type="text" class="form-control" name="user" placeholder="utilisateur">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Mot de passe">
          </div>
          <button class="btn btn-dark valid" type="submit" name="button">
              <i class="fa fa-paper-plane-o" aria-hidden="true"></i> Connexion
          </button>
        </form>
      </div>
      <div class="col-lg-4 col-md-2 col-sm-0"></div>
    </div>
  </div>
{% endblock %}
